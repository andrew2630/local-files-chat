{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Local Files Chat",
  "version": "0.6.0",
  "identifier": "com.andrzejpudzisz.local-files-chat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run prepare-ocr && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "local-files-chat",
        "width": 1000,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": ["resources"],
    "windows": {
      "webviewInstallMode": { "type": "offlineInstaller" }
    },
    "macOS": {
      "signingIdentity": "-"
    },
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}

